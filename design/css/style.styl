@import 'reset.css'
@import 'calcGrid'

c1 = #31283a
c2 = #f4663b
bp1 = 980px

cf()
  *zoom: 1
  &:before, &:after
    content: ''
    display: table
  &:after
    clear: both

align(direction = both)
  position: absolute
  transform-style: preserve-3d

  if (direction == horizontal) or (direction == h)
    left: 50%
    transform: translateX(-50%)
  else if (direction == vertical) or (direction == v)
    top: 50%
    transform: translateY(-50%)
  else
    top: 50%
    left: 50%
    transform: translate(-50%, -50%)

html
  line-height: 1.5
  font-family: 'museo-sans-rounded', sans-serif
  color: c1
  font-weight: 100

body
  min-height: 100vh
  display: flex
  flex-direction: column

.main
  flex: 1
  width: 100%

.pad
  padding: 0 20px

h1, h2, h3, h4, h5, h6
  margin: 0
  line-height: 1.1em

p
  margin-bottom: 1rem

.head
  position: fixed
  z-index: 3
  top: 0
  width: 100%
  height: 50px
  background: c1
  > div
    max-width: bp1
    margin: auto
    cf()
    position: relative
  .logo
    float: left
    img
      height: 50px
      padding: 10px
      display: block
  .btn-menu
    float: right
    background: darken(c1, 30%)
    transition: all 250ms ease
    &:hover
      background: darken(c1, 35%)
    img
      height: 50px
      padding: 15px
      display: block
  .menu
    display: none
    position: absolute
    right: 0
    top: 100%
    width: 180px
    a
      display: block
      background: lighten(c1, 25%)
      border-bottom: 1px solid lighten(c1, 20%)
      transition: all 250ms ease
      &:hover
        background: lighten(c1, 23%)
      &:last-child
        border-radius: 0 0 3px 3px
        +below(bp1)
          border-radius: 0 0 0 3px
      img
        float: left
        height: 45px
        width: 45px
        padding: 15px
        display: inline-block
      span
        height: 45px
        line-height: 45px
        font-size: .85rem
        color: white
        display: inline-block

.main
  margin: 50px auto auto
  cf()

.center
  max-width: bp1
  margin: auto
  cf()

.masthead-header
  text-align: center
  margin: 120px auto
  +below(bp1)
    margin: 50px auto
  h1
    font-size: 5rem
    font-weight: 500
    letter-spacing: -.025em
    color: darken(white, 20%)
    margin-bottom: .25rem
    +below(bp1)
      font-size: 8vw
  .lead
    font-size: 2rem
    margin-bottom: 3.5rem
    +below(bp1)
      font-size: 1rem
      padding: 0 2.5em
      margin-bottom: 1rem
  nav
    cf()
    a
      display: inline-block
      text-decoration: none
      padding: 0 3em
      height: 60px
      line-height: 60px
      border-radius: 13px
      margin: 0 10px
      font-weight: 500
      transition: all 250ms ease
      overflow: hidden
      +below(bp1)
        padding: 0 1.5em
        margin: 0 5px
      &.btn-solid
        background: c2
        color: white
        &:hover
          background: lighten(c2, 10%)
        img
          margin-top: 22px
      &.btn-outline
        color: c2
        border: 2px solid c2
        line-height: 58px
        &:hover
          border-color: lighten(c2, 10%)
          color: lighten(c2, 10%)
        img
          margin-top: 18px
      img
        float: left
        width: 20px
        margin: auto 10px auto -5px
      span
        float: left

.masthead
  background: lighten(c1, 30%)
  overflow: hidden
  padding-bottom: 80px
  +below(640px)
    padding-bottom: 40px
  h1
    color: white
    text-align: center
    font-weight: 100
    padding: 40px
    +below(640px)
      padding: 20px
  .center
    position: relative
    +below(640px)
      padding: 0 40px
    img
      position: absolute
      z-index: 1
      +below(640px)
        display: none
      &:nth-child(1)
        width: 220px
        top: 180px
        left: 10px
      &:nth-child(2)
        width: 220px
        top: 180px
        right: 10px
  iframe
    position: relative
    z-index: 2
    display: block
    margin: auto
    +below(640px)
      height: 56.25vw

.footer
  background: c1
  color: lighten(c1, 20%)
  font-size: .85rem
  position: relative
  z-index: 2
  .center
    cf()
    padding: 40px
  .col
    float: left
    width: calc(100% * 1/4)
    &:last-child
      text-align: right
      img
        width: 50%
    +below(bp1)
      width: 100%
      ul
        margin-bottom: 2rem
      &:last-child
        text-align: left
        img
          width: 120px
  .footer-header
    color: lighten(c1, 80%)
    font-size: .85rem
    font-weight: 100
    margin-bottom: 1rem
  ul
    list-style: none
    li
      display: block
      margin-bottom: 5px
      a
        text-decoration: none
        color: lighten(c1, 20%)
        transition: all 250ms ease
        &:hover
          color: lighten(c1, 40%)

.browse-masthead
  background: darken(white, 3%)
  padding: 60px 20px
  border-bottom: 1px solid darken(white, 7%)
  cf()
  header
    float: left
    +below(bp1)
      float: none
    p
      color: darken(white, 40%)
  .search-options
    float: right
    +below(bp1)
      float: none
    input
      padding: 10px
      width: 300px
      outline: none

.browse-grid
  row()
  > div
    overflow: visible
    cf()
  padding-top: 20px
  .category
    column(1/6)
    border: 1px solid darken(white, 7%)
    background: darken(white, 3%)
    border-radius: 5px
    padding: 5px
    text-decoration: none
    color: c1
    position: relative
    margin-bottom: 20px
    transition: all 250ms ease
    &:hover
      transform: translate3d(0, -3px, 0)
    &:active
      background: darken(white, 5%)
      border-color: darken(white, 10%)
    +below(bp1)
      column(1/5)
    +below(bp1 / 1.25)
      column(1/4)
    +below(bp1 / 1.5)
      column(1/3)
    +below(bp1 / 2)
      column(1/2)
    img
      display: block
      border-radius: 2px
    h4
      font-weight: 500
      font-size: .85rem
      line-height: 18px
      margin-bottom: 5px
    span
      position: absolute
      top: -1px
      right: -1px
      background: darken(white, 7%)
      border: 1px solid darken(white, 15%)
      border-radius: 0 5px 0 2px
      font-size: .75rem
      padding: 2px 5px

.login-page
  padding: 20px
  cf()
  .form
    float: left
    width: calc(50% - 20px)
    background: darken(white, 3%)
    border: 1px solid darken(white, 7%)
    padding: 20px
    border-radius: 5px
    margin: 10px
    +below(bp1)
      width: 100%
      margin: 0 0 20px 0
      &:last-child
        margin-bottom: 0
    h2
      text-align: center
      margin-bottom: 2rem
    .input-text
      position: relative
      float: left
      width: calc(50% - 20px)
      margin: 10px
      margin-bottom: 20px
      +below(bp1 / 2)
        width: calc(100% - 20px)
      span
        position: absolute
        background: darken(white, 3%)
        border: 1px solid darken(white, 7%)
        border-top: 0
        font-size: .75rem
        font-weight: 500
        top: -12px
        left: 10px
        padding: 0 3px
      input
        width: 100%
        outline: none
        padding: 10px
        border-radius: 2px
        border: 1px solid darken(white, 7%)
      &.full-width
        width: calc(100% - 20px)
    .remember-me
      margin: 10px
      input
        margin-right: 10px
      label
        font-size: .75rem
        font-weight: 300
        cursor: pointer
  button
    width: calc(50% - 20px)
    margin: 10px
    border: 0
    background: c2
    border-radius: 6px
    padding: .5em 0
    color: white
    font-weight: 500
    transition: all 250ms ease
    &:hover
      background: lighten(c2, 10%)

.stream-masthead
  background: c2
  color: darken(c2, 40%)
  padding: 60px 0
  margin-bottom: 3rem
  h1
    color: white

.stream-header
  float: left
  width: 60%
  +below(bp1 / 1.5)
    width: 100%

.stream-masthead-buttons
  float: right
  font-weight: 300
  +below(bp1 / 1.5)
    width: 100%
  a
    background: darken(c2, 25%)
    padding: 1em 2em
    overflow: hidden
    display: inline-block
    text-decoration: none
    color: white
    border-radius: 10px
    transition: all 250ms ease
    &:hover
      background: darken(c2, 30%)
    img
      float: left
      display: block
      height: 20px
      margin-right: 10px
      position: relative
      top: 2px
    span
      float: left

.stream-page
  float: left
  width: 70%
  padding-right: 2em
  border-right: 1px solid darken(white, 7%)
  +below(bp1)
    width: 100%
    padding-right: 0
    border-right: 0
    padding-bottom: 1.5rem
    border-bottom: 1px solid darken(white, 7%)
    margin-bottom: 1.5rem
  .form
    cf()
    h2
      margin-bottom: 1rem
    > div
      cf()
      margin-bottom: 10px
    input[type="text"], .checkbox
      padding: 10px
      float: left
      width: calc(50% - 10px)
      margin-right: 20px
      outline: none
      margin-bottom: 10px
      +below(bp1 / 1.5)
        width: 100%
      &:nth-child(even)
        margin-right: 0
    .checkbox
      input
        margin-right: 10px
      label
        cursor: pointer
    .input-text
      width: calc(50% - 10px)
      margin-right: 0
      overflow: hidden
      +below(bp1 / 1.5)
        width: 100%
      span
        font-size: .75em
        font-weight: 500
        margin-left: 10px
      input
        width: 100%
        font-size: .75em
    .btn-save
      background: c2
      color: white
      padding: .5em 1.5em
      border: 0
      font-weight: 300
      border-radius: 6px
      transition: all 250ms ease
      &:hover
        background: lighten(c2, 5%)

.stream-sidebar
  float: right
  width: 30%
  padding-left: 2em
  margin-bottom: 3rem
  +below(bp1)
    width: 100%
    padding-left: 0
    margin-bottom: 1.5rem
  h3
    color: darken(white, 25%)
    margin-bottom: 1rem
  ul
    list-style: none
    li
      margin-bottom: 10px
      a
        color: c2
        text-decoration: none
        &:hover
          text-decoration: underline

html.disable-scroll, html.disable-scroll body
  overflow: hidden

.modal
  display: none
  &.active
    display: block
    .overlay
      position: fixed
      top: 0
      width: 100%
      height: 100%
      background: rgba(black, 90%)
      z-index: 4
      transition: all 400ms ease
    .modal-page
      transition: all 400ms ease
      position: fixed
      z-index: 5
      top: 10%
      bottom: 10%
      left: 10%
      right: 10%
      padding: 0 40px 40px
      border-radius: 10px
      overflow-y: scroll
      background: white
      font-size: .85em
      .answer
        &:first-child
          h3
            padding-top: 0
            border-top: 0
      h3
        margin-top: 40px
        padding-top: 40px
        margin-bottom: .5rem
        color: c2
        font-size: 1.5rem
        border-top: 1px solid lighten(c2, 80%)

.channel-masthead
  background: darken(white, 3%)
  border-bottom: 1px solid darken(white, 7%)
  border-right: 0
  padding: 20px
  position: fixed
  width: 100%
  height: 91px
  z-index: 2
  +below(bp1)
    position: relative
    height: auto
  .top
    float: left
    +below(bp1)
      margin-bottom: .5rem
  header
    cf()
    h1
      float: left
      font-size: 1.5rem
      font-weight: 700
      margin-right: 10px
    span
      background: lighten(red, 20%)
      color: white
      padding: .05em .5em
      font-size: .75em
      float: left
      border-radius: 2px
      font-weight: 700
  .avatar
    width: 50px
    float: left
    margin-right: 15px
    +below(bp1)
      margin-bottom: 1rem
  .breadcrumbs
    a
      font-size: .75em
      color: darken(white, 40%)
      text-decoration: none
      &:hover
        text-decoration: underline
    .div
      color: darken(white, 15%)
      font-size: .75em
      padding-left: 6px
      padding-right: 5px
  .right-side
    float: right
    +below(bp1)
      float: left
      clear: both
    a
      background: lighten(c1, 40%)
      color: white
      text-decoration: none
      font-size: .75em
      padding: .5em 2em
      border-radius: 3px
      font-weight: 300
      transition: all 250ms ease
      &:hover
        background: lighten(c1, 50%)
      img
        position: relative
        top: 1px
        height: 12px

.channel-container
  cf()
  margin-top: 91px
  +below(bp1)
    margin-top: 0
  .video-side
    float: left
    width: 70%
    padding: 20px 20px 20px 0
    +below(bp1)
      float: none
      width: 100%
      padding: 20px
    iframe
      display: block
    .desc
      margin-top: 2rem
      font-size: .85em
      h2
        font-size: 1.25rem
        margin-bottom: .5rem
  .chat-wrap
    width: 30%
    float: left
    height: 100%
    +below(bp1)
      width: 100%
      float: none
      padding: 0 20px
      margin-bottom: 2rem
    > div
      position: fixed
      +below(bp1)
        position: relative
    .chat-area
      height: calc(100vh - 91px - 50px - 40px)
      border: 1px solid darken(white, 10%)
      border-bottom: 0
      border-top: 0
      font-size: .75em
      background: darken(white, 2%)
      overflow-y: scroll
      +below(bp1)
        height: 400px
        border-top: 1px solid darken(white, 10%)
      table
        width: 100%
        td
          vertical-align: top
          padding: 5px
          border-bottom: 1px solid darken(white, 5%)
          overflow: hidden
          &:nth-child(odd)
            text-align: right
  .input-area
    input
      width: 100%
      height: 40px
      padding: 5px
      font-size: .85em
      font-weight: 300
      outline: none
      border: 1px solid darken(white, 10%)
      border-bottom: 0
      +below(bp1)
        border-bottom: 1px solid darken(white, 10%)
