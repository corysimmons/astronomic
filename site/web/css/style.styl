@import 'reset.css'
@import 'elf'
@import url(http://fonts.googleapis.com/css?family=Open\+Sans:400,600,700,300);

// debug(yellow)

c1 = lighten(#a284c5, 90%)
c2 = lighten(#a284c5, 20%)

bp1 = 960px

.page-home
  font-family: 'Open Sans', sans-serif
  background: url(../img/nebula-bot.jpg) center 120% no-repeat
  height: 100%
  body
    background: url(../img/nebula-top.png) center -10% no-repeat
    height: 100%

.home-center
  display: table
  height: 100%
  width: 100%
  > div
    display: table-cell
    vertical-align: middle
    text-align: center
    > img
      width: 30%
      @media (max-width: bp1)
        width: 70%
      margin-bottom: 3rem
    > div
      width: 25%
      @media (max-width: bp1)
        width: 60%
      margin: auto
      > a
        column(1/2)
        @media (max-width: bp1)
          span(1)
          margin-bottom: 1rem
        border: 2px solid c1
        border-radius: 6px
        padding: .5em 1em
        text-decoration: none
        color: c2
        background: white
        &:hover
          border-color: darken(c1, 3%)

html
  background: darken(white, 2%)

.head
  height: 50px
  line-height: 50px
  position: fixed
  background: white
  width: 100%
  box-shadow: 0 0 15px rgba(black, 10%)
  align-children(vertical)
  > a
    span(1/2)
    margin-left: 15px
    display: block
    > img
      display: block
      height: 35px
  > nav
    span(1/2)
    margin-right: 15px
    a
      float: right
      font-size: 13px
      margin-left: 20px
      color: mix(c2, black)
      font-weight: bold
      text-decoration: none
      &:nth-child(1)
        &:before
          content: '/'
          position: relative
          left: -10px
          color: lighten(c2, 70%)

.content
  padding-top: 50px
  > div
    padding: 15px

h1, h2, h3, h4, h5, h6, p
  margin-top: 0
  color: mix(c2, black)
  font-weight: 100
  margin-bottom: 15px

h1
  font-size: 26px

input[type="text"]
  padding: .5em
  border-radius: 6px
  border: 1px solid c1
  font-weight: 100
  font-size: 13px

.search-category
  column(1/3)
  margin-bottom: 30px
  @media (max-width: bp1)
    span(1)

.browse-streams
  clear: both
  img
    column(1/5)
    cycle(5)
    filter: grayscale(.5)
    margin-bottom: 30px
    border-radius: 6px
    @media (max-width: bp1)
      column(1/2)
      cycle(2, 5)
